@model ERecruitment.Models.Answers.AnswerModel
@{
    ViewBag.Title = "Theory answer";

    var question = ViewBag.Question;
    var questionId = ViewBag.QuestionId;
}

<section class="content">
    <header>
        <h2>@ViewBag.Title</h2>
    </header>
    
    <div class="row">
        <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
            <div class="box">
                <header class="answer-header">
                    <h3>Question: </h3>
                    <p>@question</p>
                </header>

                @using (Html.BeginForm("theory", "answers", new { quesid = questionId }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "An error occured, correct and try again.",
                        new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(a => a.Answer, new{@class = "form-label"})
                        @Html.TextAreaFor(a => a.Answer, new{@class = "form-control"})
                    </div>
                    <footer>
                        <input type="submit" value="Next" class="btn btn-primary" />
                    </footer>
                }
            </div>
        </div>
    </div>
    
</section>

