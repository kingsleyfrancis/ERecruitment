@using System
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - ERecruit</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <div class="page">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("ETP Admin Portal", "Index", "Home",
                            new {area = ""}, new {@class = "navbar-brand"})
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("index", "dashboard", 
                                new { Area = "admin" })">Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("index", "test", new{Area = "admin"})">Tests</a>
                            </li>
                            <li>
                                <a href="@Url.Action("index", "question",
                                new{Area = "admin"})">Questions</a>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartialAdmin")
                    </div>
                </div>
            </div>
            <div class="container body-content">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer-content">
            <p>&copy; @DateTime.Now.Year - ERecruit Test Platform</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", false)
    </body>
</html>