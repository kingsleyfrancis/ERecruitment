@using ERecruitment.Common
@model ERecruitment.Models.RegisterViewModel
@{
    ViewBag.Title = "Create a new account.";
}

<section class="content">
    <header>
        <h2>@ViewBag.Title.</h2>
    </header>
    
    <div class="row">
        <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
            
            @using (Html.BeginForm("Register", "Account", FormMethod.Post,
                new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="box">
                    <header>
                        <h3>Personal details</h3>
                    </header>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Lastname)
                        @Html.TextBoxFor(a => a.Lastname, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.Firstname)
                        @Html.TextBoxFor(a => a.Firstname, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.Phone)
                        @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @{
                            var states = SiteHelper.GetStateListItems();
                        }

                        @Html.LabelFor(a => a.State)
                        @Html.DropDownListFor(a => a.State, states,
                            new { @class = "form-control" })
                    </div>
                </div>

                <div class="box">
                    <header>
                        <h3>Account details</h3>
                    </header>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

            <div class="box">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>

            }
        </div>
    </div>
   
</section>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}